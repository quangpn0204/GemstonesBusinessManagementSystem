<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GemstonesBusinessManagementSystem.Resources">
    <Style x:Key="HeadingText1" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
        <Setter Property="FontSize" Value="34"/>
        <Setter Property="FontFamily" Value="/GemstonesBusinessManagementSystem;component/Resources/Fonts/#Lato Heavy"/>
    </Style>
    <Style x:Key="HeadingText2" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontFamily" Value="/GemstonesBusinessManagementSystem;component/Resources/Fonts/#Lato Heavy"/>
    </Style>
    <Style x:Key="Text" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Black2}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="/GemstonesBusinessManagementSystem;component/Resources/Fonts/#Lato Semibold"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
</ResourceDictionary>